{
    "variables": {
        "vm_name": "openbsd-6.2-amd64-vbox",
        "iso_url": "http://ftp.openbsd.org/pub/OpenBSD/6.2/amd64/install62.iso",
        "iso_sha256": "b7994d29c7db3087db65158901d700fb7d10500b9b7496c1d86b285cabce0a2b",
        "mirror": "http://ftp.openbsd.org"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "OpenBSD_64",
        "vm_name": "{{user `vm_name`}}",
        "disk_size": "10140",
        "vboxmanage": [
            [ "modifyvm", "{{.Name}}", "--memory", "384" ],
            [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
        ],
        "iso_checksum_type": "sha256",
        "iso_url": "{{user `iso_url`}}",
        "iso_checksum": "{{user `iso_sha256`}}",
        "ssh_wait_timeout": "20m",
        "ssh_username": "root",
        "ssh_password": "vagrant",
        "shutdown_command": "/sbin/halt -p",
        "boot_wait": "30s",
        "guest_additions_mode": "disable",
        "ssh_port": 22,
        "boot_command": [
            "S<enter>",
            "cat <<EOF >>install.conf<enter>",
            "System hostname = openbsd62<enter>",
            "Password for root = vagrant<enter>",
            "Setup a user = vagrant<enter>",
            "Password for user = vagrant<enter>",
            "Allow root ssh login = yes<enter>",
            "What timezone are you in = UTC<enter>",
            "Location of sets = cd<enter>",
            "Set name(s) = -game*.tgz -x*.tgz<enter>",
            "Directory does not contain SHA256.sig. Continue without verification = yes<enter>",
            "EOF<enter>",
            "install -af install.conf && reboot<enter>"
        ]
    }],

    "provisioners": [{
        "environment_vars": [
            "MIRROR={{user `mirror`}}",
            "INSTALL_ANSIBLE=false",
            "INSTALL_CHEF=false"
        ],

        "type": "shell",
        "execute_command": "export {{.Vars}} && cat {{.Path}} | su -m",
        "scripts": [
            "scripts/postinstall.sh",
            "scripts/vagrant.sh",
            "scripts/sshd.sh",
            "scripts/virtualbox.sh",
            "scripts/ansible.sh",
            "scripts/chef.sh",
            "scripts/cleanup.sh"
        ]
    }],

    "post-processors": [{
        "type": "vagrant",
        "output": "{{user `vm_name`}}.box",
        "vagrantfile_template": "Vagrantfile",
        "keep_input_artifact": true
    }]
}
